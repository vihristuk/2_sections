.page__container
  padding-top: 95px;
  padding-bottom: 30px;
  flex-wrap: wrap;
  justify-content: space-between;

.page__content
  display: flex;
  flex-direction: column;  
  margin-bottom: 50px;

.pageContent__imgContainer
  margin-bottom: 23px;
  position: relative;
  filter: grayscale(100%);
  &:hover
    filter: grayscale(0);

.pageContent__imgDesc
  font-size: 30px;
  font-weight: 500;
  line-height: 58px;
  position: absolute;
  bottom: 0;
  right: 15px;
  height: 54px;
  width: 91px;
  background-color: black;
  text-align: center;

.pageContent__text
  margin-bottom: 26px;
  font-weight: 300;
  font-size: 20px;
  line-height: 1.3;
  max-width: 370px;

.pageContent__button
  font-family: 'PT Sans Caption';
  font-size: 14px;
  font-weight: bold;
  width: 145px;
  padding: 15px 25px;
  text-decoration: none;  
  text-transform: uppercase;
  border: white 1px solid;
  letter-spacing: 1.4px;
  display: block;
  &:hover
    background-color: white;
    color: black;

a
  color: white;

.page__navigation
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 100px;

.navigation__item
  margin-right: 30px;
  font-weight: 500;
  font-size: 35px;
  color: #86362a;
  &:hover
    color: white;

.navigation__item_active
  color: white;
  pointer-events: none;
  cursor: default;

.navigation__item_last
  margin-right: 0;

@media (max-width: 865px)
  .page__container
    width: 95%;

  .pageContent__text
    font-size: 18px;
    max-width: 349px;

@media (max-width: 734px) 
  .page__container
    justify-content: center;

  .pageContent__text
    margin-bottom: 20px;
    font-weight: 300;
    font-size: 16px;

  .pageContent__button
    font-size: 12px;
    font-weight: 300;
    width: 120px;
    padding: 15px 15px;

@media (max-width: 767px) 
  .pageContent__text 
    max-width: 280px;